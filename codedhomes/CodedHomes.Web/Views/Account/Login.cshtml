@model CodedHomes.Web.Models.LoginModel

<h2>Login</h2>
<p class="lead well well-sm">@Html.ActionLink("Register", "Register") if you don't have an account.</p>
<section id="loginForm">

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="container form-horizontal">
        <div class="form-group">
            <div class="col-sm-2">@Html.LabelFor(m => m.UserName)</div>
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.UserName, new {@class="form-control"})
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">@Html.LabelFor(m => m.Password)</div>
            <div class="col-sm-8">
                @Html.PasswordFor(m => m.Password, new {@class="form-control"})
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-8 col-sm-offset-2">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-8 col-sm-offset-2">
                <input class="btn btn-default btn-lg" type="submit" value="Log in" />
            </div>
        </div>
    </div>
}
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
